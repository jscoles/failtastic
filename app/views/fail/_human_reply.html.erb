<div class='human_reply' data-id='<%= rep.id %>'>
  <table class='header'><tr>
    <td>
      <h3><%= rep.from %></h3>
      <span class='recipients'><%= recipient_list(rep.to_emails) %></span>
    </td>
    <td class='subtext'><%= date_in_words(rep.sent_at) %></td>
  </tr></table>

  <%= clean_email(rep.body) %>
</div>